{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 12",
  
    "compilerOptions": {
      "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string", "DOM"],
      "moduleResolution": "node",
      "target": "ES6",

      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist"
    },

    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules/**/*"
    ]
}